{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate CMake Cache F303RE",
            "type": "shell",
            "group": "build",
            "command": "cmake -DCMAKE_TOOLCHAIN_FILE=../../../arm-none-eabi-gcc.cmake -DCMAKE_BUILD_TYPE=Release ../../..",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build/F303RE/Release"
              }
        },
        {
            "label": "Build F303RE",
            "type": "shell",
            "group": "build",
            "command": "cmake --build . -- -j 4",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build/F303RE/Release"
            },
            "dependsOn": "Generate CMake Cache F303RE"
        },
        {
            "label": "Generate CMake Cache Debug F303RE",
            "type": "shell",
            "group": "build",
            "command": "cmake -DCMAKE_TOOLCHAIN_FILE=../../../arm-none-eabi-gcc.cmake -DCMAKE_BUILD_TYPE=Debug ../../..",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build/F303RE/Debug"
              }
        },
        {
            "label": "Build Debug F303RE",
            "type": "shell",
            "group": "build",
            "command": "cmake --build . -- -j 4",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build/F303RE/Debug"
            },
            "dependsOn": "Generate CMake Cache Debug F303RE"
        }
    ]
}