{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Target",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:BUILD_TARGET}/${input:BUILD_TYPE}/NUCLEO-${input:BUILD_TARGET}.out",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "filterStderr": true,
            "filterStdout": false,
            "debugServerArgs": "-f board/st_nucleo_f3.cfg",
            "preLaunchTask": "Build Target",
            "serverLaunchTimeout": 20000,
            "setupCommands": [
                { "text": "-target-select remote localhost:3333", "description": "connect to target", "ignoreFailures": false },
                { "text": "-file-exec-and-symbols ${workspaceFolder}/build/${input:BUILD_TARGET}/${input:BUILD_TYPE}/NUCLEO-${input:BUILD_TARGET}.out", "description": "load file", "ignoreFailures": false},
                { "text": "-interpreter-exec console \"monitor endian little\"", "ignoreFailures": false },
                { "text": "-interpreter-exec console \"monitor reset\"", "ignoreFailures": false },
                { "text": "-interpreter-exec console \"monitor halt\"", "ignoreFailures": false },
                { "text": "-interpreter-exec console \"monitor arm semihosting enable\"", "ignoreFailures": false },
                { "text": "-target-download", "description": "flash target", "ignoreFailures": false }
            ],
            "logging": {
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "osx": {
                "MIMode": "gdb",
                "MIDebuggerPath": "/usr/local/bin/arm-none-eabi-gdb",
                "debugServerPath": "openocd"
            },
        }
    ],
    "inputs": [
        {
          "id": "BUILD_TYPE",
          "type": "pickString",
          "description": "Build for Debug or Release",
          "options": [
              "DEBUG",
              "RELEASE"
          ]
        },
        {
            "id": "BUILD_TARGET",
            "type": "pickString",
            "description": "Build Target (ex. F303RE)",
            "options": [
                "STM32F3xx",
                "STM32F301x8",
                "STM32F302x8",
                "STM32F302xC",
                "STM32F302xE",
                "STM32F303xE",
                "STM32F318xx",
                "STM32F328xx",
                "STM32F334x8",
                "STM32F358xx",
                "STM32F373xC",
                "STM32F378xx",
                "STM32F398xx"
            ]
        }
    ]
}